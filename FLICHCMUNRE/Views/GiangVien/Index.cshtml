@model IEnumerable<FLICHCMUNRE.Models.AllGiangVienResult>




<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/index.css">
    <title>QUẢN LÝ</title>
</head>

<body>
    <div class="" style="background-image: url('../imgs/header-bg.png'); height: 100vh; background-size:contain">
        <div class="d-flex justify-content-between ">
            <div class="w-100 bg-info d-flex pt-5 " style="height: 100vh; ">
                <center>

                    <div class="mt-3">
                        @Html.ActionLink("QUẢN LÝ TÀI KHOẢN", "QLAdmin", "TaiKhoan", "TaiKhoan", new { @class = "p-3 bg-info  mt-3 w-100 rounded  text-white" })
                    </div>


                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ KHÓA HỌC", "Index", "KhoaHoc", "KhoaHoc", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>


                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ LỚP HỌC", "Index", "LopHoc", "LopHoc", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })
                    </div>


                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ HỌC VIÊN", "Index", "HocVien", "HocVien", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>

                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ GIẢNG VIÊN", "Index", "GiangVien", "GiangVien", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>

                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ THỂ LOẠI", "Index", "TheLoai", "TheLoai", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>

                    <div class="mt-5">
                        @Html.ActionLink("HOME", "Index", "Home", "Home", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>
                    <div class="mt-5">
                        @Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "Home", "Home", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>
                </center>
            </div>

            <div class="container mt-4 w-100">
                <h2 class=" text-center text-white">THÊM</h2>
                <div class=" bg-white card text-center " style="overflow-y:scroll; height:80vh">
                    @using (Html.BeginForm("Create", "GiangVien", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="w-100 mt-2">
                            <b><p class="text-left" style="margin-left: 40px">Mã <span class="text-danger">*</span></p></b>

                            <input name="MaGV" placeholder="Nhập mã giảng viên" class="w-75 p-2 rounded border-light" value="" />
                            <p class="text-danger">@TempData["CheckMaGV"]</p>

                        </div>
                        <div class="w-100 mt-2">
                            <b><p class="text-left" style="margin-left: 40px">Họ Tên <span class="text-danger">*</span></p></b>
                            <input name="HoTen" placeholder="Nhập họ tên giảng viên" class="w-75 p-2 rounded border-light" value="" />
                            <p class="text-danger">@TempData["CheckHoTen"]</p>

                        </div>
                        <div class="w-100 mt-4">
                            <b><p class="text-left" style="margin-left: 40px">Mã Định Danh <span class="text-danger">*</span></p></b>

                            <input class="w-75   p-2 rounded border-light" placeholder="Nhập mã định danh" type="number" name="CCCD" value="" />
                            <p class="text-danger">@TempData["CheckCCCD"]</p>

                        </div>
                        <div class="w-100 mt-4">
                            <b><p class="text-left" style="margin-left: 40px">Email <span class="text-danger">*</span></p></b>

                            <input class=" w-75   p-2 rounded border-light" placeholder="Nhập email" type="email" name="Email" value="" />
                            <p class="text-danger">@TempData["CheckEmail"]</p>

                        </div>
                        <div class="w-100 mt-4">
                            <b><p class="text-left" style="margin-left: 40px">Số Điện Thoại <span class="text-danger">*</span></p></b>

                            <input class=" w-75  p-2 rounded border-light" placeholder="Nhập số điện thoại" type="number" name="SDT" value="" />
                            <p class="text-danger">@TempData["CheckSDT"]</p>

                        </div>
                        
                        <div class="w-100 mt-4">
                            <b><p class="text-left" style="margin-left: 40px">Nơi Sinh <span class="text-danger">*</span></p></b>

                            <input class=" w-75   p-2 rounded border-light" placeholder="Nhập nơi sinh" type="text" name="NoiSinh" value="" />
                            <p class="text-danger">@TempData["CheckNoiSinh"]</p>

                        </div>
                        <div class="w-100 mt-4">
                            <b><p class="text-left" style="margin-left: 40px">Trình Độ <span class="text-danger">*</span></p></b>

                            <input class=" w-75   p-2 rounded border-light" placeholder="Nhập trình độ học vấn" type="text" name="TrinhDo" value="" />
                            <p class="text-danger">@TempData["CheckTrinhDo"]</p>

                        </div>
                        <div class="w-100 mt-4">
                            <b><p class="text-left" style="margin-left: 40px">Giới Tính <span class="text-danger">*</span></p></b>
                            <select value="" style="outline: none" class="w-75  p-2 rounded " name="GioiTinh">
                                <option value="1">Nam</option>
                                <option value="0">Nữ</option>
                            </select>
                        </div>
                        <div class="w-100 mt-4">
                            <b><p class="text-left" style="margin-left: 40px">Ngày Sinh <span class="text-danger">*</span></p></b>
                            <input class="w-75  p-2 rounded border-light" type="date" name="NgaySinh" value="" />
                        </div>
                        <div class="w-100 mt-4">
                            <b><p class="text-left" style="margin-left: 40px">Loại Giảng Viên <span class="text-danger">*</span></p></b>
                            <select value="" class="w-75   p-2 rounded " name="IsForeign">
                                <option value="1">Trong nước</option>
                                <option value="0">Ngoài nước</option>
                            </select>
                        </div>
                        <button type="submit" class="btn bg-info w-75 mt-3 text-white mb-5">Thêm</button>
                    }

                </div>

            </div>
            <div class="container mt-4 w-100">
                <div class=" ">
                    <h2 class="text-center text-white">DANH SÁCH CÁC GIẢNG VIÊN</h2>
                    <div>
                        @using (Html.BeginForm("ExportToExcel", "GiangVien", FormMethod.Post))
                        {
                            <input type="submit" value="Export To Excel" class="w-25 bg-white text-info mb-2" style="border:none; outline:none" />
                        }
                        @using (Html.BeginForm("ExportToCSV", "GiangVien", FormMethod.Post))
                        {
                            <input type="submit" value="Export To CSV" class="w-25 bg-white text-info mb-2" style="border:none; outline:none" />
                        }
                    </div>
                    <div style="height: 1000px;max-height: 70vh; overflow-y: scroll" class="bg-white card">


                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayName("Mã")
                                </th>
                                <th>
                                    @Html.DisplayName("Họ Tên")
                                </th>
                                <th>
                                    @Html.DisplayName("Email")
                                </th>
                                <th>
                                    @Html.DisplayName("CCCD")
                                </th>
                                <th>
                                    @Html.DisplayName("SDT")
                                </th>
                                <th>
                                    @Html.DisplayName("Password")
                                </th>
                                <th>
                                    @Html.DisplayName("Giới Tính")
                                </th>
                                <th>
                                    @Html.DisplayName("Nơi Sinh")
                                </th>
                                <th>
                                    @Html.DisplayName("Ngày Sinh")
                                </th>
                                <th>
                                    @Html.DisplayName("Trình Độ")
                                </th>
                                <th>
                                    @Html.DisplayName("IsForeign")
                                </th>
                                @*<th>
                        @Html.DisplayName(model => model.STATUS)
                    </th>*@
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MAGV)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HOTEN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EMAIL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CCCD)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SDT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PASS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GIOITINH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NOISINH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NGAYSINH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TRINHDO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ISFOREIGN)
                                    </td>
                                    @*<td>
                            @Html.DisplayFor(modelItem => item.STATUS)
                        </td>*@
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>

                    <div class=" bg-white card text-center mt-3">

                        <div>

                            @using (Html.BeginForm("Search", "GiangVien", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="d-flex justify-content-center align-items-center p-2">
                                    <input type="text" name="Search" placeholder="Nhập tên cần tìm..."
                                           class="w-75 p-2 rounded border-light mr-2">

                                    <input type="submit" value="Tìm Kiếm" class=" w-25 btn bg-info p-2 text-white" />

                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
    <script type="text/javascript" src="scripts/javascript.js"></script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
</body>

</html>
