@model FLICHCMUNRE.Models.HocVienInfoResult

@using FLICHCMUNRE.Models


<!DOCTYPE html>
<cshtml lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Tra cứu thông tin đã đăng ký</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="~/styles/index.css">
    </head>


    <body>

        <div class="" style="background-image: url('../imgs/header-bg.png'); height: 100vh; background-size:contain">
            <div class="d-flex ">
                <div class=" bg-info d-flex pt-5 " style="height: 100vh; width: 215px">
                    <center>

                        <div class="mt-3">
                            @Html.ActionLink("QUẢN LÝ TÀI KHOẢN", "QLTKHV", "TaiKhoan", "TaiKhoan", new { @class = "p-3 bg-info  mt-3 w-100 rounded  text-white" })
                        </div>

                        <div class="mt-5">
                            @Html.ActionLink("DS ĐĂNG KÝ HỌC", "TinhTrangDangKyHoc", "HocVien", "HocVien", new { @class = "p-3 bg-info  mt-3 w-100 rounded  text-white" })
                        </div>

                        <div class="mt-5">
                            @Html.ActionLink("DS ĐĂNG KÝ THI", "TinhTrangDangKyThi", "HocVien", "HocVien", new { @class = "p-3 bg-info  mt-3 w-100 rounded  text-white" })
                        </div>

                        <div class="mt-5">
                            @Html.ActionLink("HOME", "Index", "Home", "Home", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                        </div>
                        <div class="mt-5">
                            @Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "Home", "Home", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                        </div>
                    </center>
                </div>
                <div class="container">

                    <div class=" bg-light mt-5  mb-3 rounded">
                        <div class="mb-3 text-center pt-2">
                            <span class="font-weight-bolder lead  ">Mã # @Model.MAHV</span>
                        </div>
                        <div class="bg-white p-5">
                            <div class="row">
                                <div class="col-lg-6">
                                    <h5 class="mb-3">Thông tin cá nhân</h5>
                                    Họ tên:<span style="margin-left: 30px;" class=" font-weight-bold">@Model.MAHV</span><br>
                                    @if (Model.LOP != "")
                                    {
                                        <span>Lớp:</span><span style="margin-left: 46px;" class=" font-weight-bold">@Model.LOP</span><br>

                                    }
                                    Email: <span style="margin-left: 35px;" class=" font-weight-bold">@Model.EMAIL</span><br>
                                    Điện thoại: <span class=" font-weight-bold">@Model.SDT</span>
                                </div>

                                <div class="col-lg-6 text-right">
                                    <h5 class="mb-3">Thông tin đăng ký</h5>
                                    MSSV/CCCD/CMND: <span class="font-weight-bold">@Model.CCCD</span><br>
                                    Số lượng khóa học đã đăng ký: <span class="font-weight-bold"></span><br>
                                </div>
                            </div>


                        </div>
                        @*<h2 class="text-warning text-center">${warn}</h2>*@
                        @Html.ActionLink("CẬP NHẬT THÔNG TIN CÁ NHÂN", "EditPersonal","HocVien", new { id = Model.ID }, new { @class="text-white bg-info p-2" , style="margin-left:800px"})
                    </div>
                    <div class="container bg-light mt-2  mb-3 rounded" style="overflow-y: scroll;height: 49vh">

                        <div class="row  text-center">

                            <h2 class=" mb-3 m-auto mt-3 pt-2">DANH SÁCH CÁC KHÓA HỌC ĐÃ ĐĂNG KÝ</h2>

                            <table class="table  rounded text-center mt-3">
                                <thead class="table-dark">
                                    <tr class="text-white">

                                        <th scope="col">Khóa học</th>
                                        <th scope="col">TGBD</th>
                                        <th scope="col">TGKT</th>
                                        <th scope="col">TGDK</th>
                                        <th scope="col">Tình trạng</th>
                                    </tr>
                                </thead>
                                @foreach (var item in TempData["DanhSachDangKy"] as List<DanhSachDaDangKyKhoaHocResult>)
                                {
                                    <tr>

                                        <td>@item.TenKH</td>
                                        <td>@item.TGBD</td>
                                        <td>@item.TGKT</td>
                                        <td>@item.NGAYDK</td>

                                        @if (item.STATUS == 1)
                                        {
                                            <td>
                                                <span class="text-success"><i class="fas fa-check"></i></span>
                                            </td>
                                        }

                                        else
                                        {
                                            <td>
                                                <span class="text-warning">Đăng ký thất bại!</span>
                                            </td>
                                        }

                                    </tr>
                                }



                            </table>


                        </div>

                    </div>
                </div>
            </div>
        </div>



        <script type="text/javascript" src="~/scripts/javascript.js"></script>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
                integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
                integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
                crossorigin="anonymous"></script>
    </body>

</cshtml>