@using FLICHCMUNRE.Models;
@{ ViewBag.Title = "Đăng Ký Thi";
                Layout = null; }
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/styles/index.css">
</head>

<body>
    <div class="pb-3" style="background-image: url('../imgs/header-bg.png'); background-size:contain">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center pt-4">
                <div class="logo">
                    <img src="../imgs/logohcmunre.png" alt="" class="" style="height:100px">
                </div>
                <div class="text-white " style="display:flex;justify-content:space-between;align-items:center">

                    <a style="width: 150px; font-weight: bold;" href="index.jsp">@Html.ActionLink("Trang Chủ", "Index", "Home", new { @class = "text-white w-25" })</a>
                    <a class="text-white " style="width: 150px; font-weight: bold;" href="LoadFormInfo">@Html.ActionLink("Đăng Ký Học", "DangKyHoc", "Home", new { @class = "text-white w-25" })</a>
                    <a class="text-white " style="width: 150px; font-weight: bold;" href="LoadFormInfoDangKyThi">
                        @Html.ActionLink("Đăng Ký Thi", "DangKyThi", "Home", new { @class = "text-white w-25" })

                    </a>
                    
                    <a class="text-white " style="width: 150px; font-weight: bold;" href="huongdansudung.jsp">
                        @Html.ActionLink("Hướng Dẫn", "HuongDan", "Home", new { @class = "text-white w-25" })
                    </a>
                    <a class="text-white " style="width: 150px; font-weight: bold;" href="dangnhap.jsp">@Html.ActionLink("Đăng Nhập", "DangNhap", "Home", new { @class = "text-white w-25" })</a>
                </div>
            </div>
            <div class="text-white text-center mt-5">
                <h6 class="text-info bg-white p-2 mb-5">
                    Số tài khoản: 0261003491765, Chi nhánh Vietcombank Thủ Thiêm, Trung
                    tâm
                    Ngoại ngữ - Tin học Đại học Tài nguyên và Môi trường TPHCM
                </h6>


                @*<form action="getDKTInfo" method="processRequest">
                        <input type="number" required="required" name="HVInfo"
                               class="position-relative p-3 rounded w-50 border-primary pl-5 border-0 bg-light "
                               placeholder="Tra cứu các thông tin đã đăng ký thi">
                        <button class="btn text-white p-3"
                                style="background: linear-gradient(90deg, #39cfca 0%, #3279bb 100%); border: 2px solid #fff;">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>*@
            </div>
        </div>

        <div class="container bg-white mt-3 card  mb-3">

            <div class=" p-5 card mt-2 position-relative">

                <h3 class="text-center">ĐĂNG KÝ THI DÀNH CHO THÍ SINH TỰ DO</h3>
                <h5 class="text-success">@TempData["Success1"]</h5>

                @using (Html.BeginForm("DangKyThi", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
            @Html.AntiForgeryToken()
                            <div class="p-2">
                                <p class="text-danger">* là các tiêu chí bắt buộc không được bỏ trống!</p>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <span>Mã định danh</span>
                                        <a href="#" id="" class="tutorial">
                                            <span class="text-primary">Hướng dẫn cách nhập</span>
                                            <div id="tutorial" class="tutorialPopup rounded">
                                                <div class="contentTutorial w-100 m-auto bg-secondary p-5">
                                                    <div class="contentTutorial__head d-flex justify-content-between">
                                                        <h4 class="text-white m-auto ">Hướng dẫn nhập Mã</h4>

                                                    </div>
                                                    <div class="contentTutorial__body">
                                                        <div class="contentTutorial__body__item bg-light p-2 m-3 rounded">
                                                            <div class="text-primary">Nhập MSSV đối với:</div>
                                                            <p class="">Sinh viên Đại học tại HCMUNRE</p>
                                                        </div>
                                                        <div class="contentTutorial__body__item bg-light p-2 m-3 rounded">
                                                            <div class="text-primary">Nhập Mã học viên đối với:</div>
                                                            <p class="">Học viên Cao học tại HCMUNRE</p>
                                                        </div>
                                                        <div class="contentTutorial__body__item bg-light p-2 m-3 rounded">
                                                            <div class="text-primary">Nhập CMND, CCCD đối với:</div>
                                                            <p class="">Người đăng ký hiên không học tại HCMUNRE</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>

                                        <span class="text-danger"> *</span>
                                        <input type="number" value="" name="CCCD" class="w-100 p-2 rounded border-light"
                                               placeholder="Nhập theo hướng dẫn cách nhập">
                                        <p class="text-danger">@TempData["CheckCCCD"]</p>

                                    </div>
                                    <div class="col-lg-4">
                                        <span>Họ tên</span><span class="text-danger"> *</span>
                                        <input type="text" value="" name="HoTen" class="w-100 p-2 rounded border-light"
                                               placeholder="Nhập đầy đủ họ và tên">
                                        <p class="text-danger">@TempData["CheckHoTen"]</p>
                                    </div>
                                    <div class="col-lg-4">
                                        <span>Ngày sinh</span> <span class="text-danger"> *</span>

                                        <input type="date" value="" max="2008-01-01" name="NgaySinh" required class="w-100 p-2 rounded border-light">
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-lg-4">
                                        <span>Nơi sinh</span> <span class="text-danger"> *</span>
                                        <input type="text" value="" name="NoiSinh" class="w-100 p-2 rounded border-light"
                                               placeholder="VD: Đồng Tháp">
                                        <p class="text-danger">@TempData["CheckNoiSinh"]</p>

                                    </div>
                                    <div class="col-lg-4">
                                        <span>Email</span><span class="text-danger"> *</span>
                                        <input type="email" value="" name="Email" class="w-100 p-2 rounded border-light"
                                               placeholder="Email thường dùng nhất">

                                    </div>
                                    <div class="col-lg-4">
                                        <span>Điện thoại</span> <span class="text-danger"> *</span>
                                        <input type="number" value="" name="SDT" class="w-100 p-2 rounded border-light"
                                               placeholder="Số điện thoại thường dùng nhất">
                                        <p class="text-danger">@TempData["CheckSDT"]</p>

                                    </div>
                                </div>
                                <div class="row mt-3 align-item-center">
                                    <div class="col-lg-6">
                                        <span>Khóa học</span><span class="text-danger"> *</span>
                                        <select name="MaKH" value="" id="" style="outline: none" class="w-100 p-2 rounded  bg-light">

                                            @foreach (var l in @ViewData["AllKH"] as List<AllKhoaHocGocResult>)
                                            {
                            <option value="@l.MAKH">@l.TENKH</option>}
                                        </select>
                                    </div>
                                    <div class="col-lg-6">

                                        <span>Ảnh chụp hóa đơn, chuyển khoản</span> <span class="text-danger">
                                            (&lt;
                                            3MB)*
                                        </span>

                                        <input type="file" title="Chọn ảnh hóa đơn thanh toán khóa học" value="${AnhCK}" required="required" name="AnhCK" class="w-100  rounded border-light">
                                        <span class="text-success mt-3">Nội dung chuyển khoản: </span><p class="text-success  mb-3">
                                            Nội dung: MSSV/CCCD/CMND, Họ và Tên, Khóa Học, Thời Gian<br><br>
                                            VD: Nguyễn Văn Hiền, MSSV: 850080018, học TOEIC 850-990, từ 05/10/2022 - 05/12/2022<br>
                                            <span class="text-danger">Cú Pháp: 850080018 NGUYEN VAN HIEN, TOEIC 850-990, 05/10 - 12/12/2022</span><br><br> Lệ phí thi là 950k / lần thi
                                        </p>
                                    </div>
                                </div>
                                <button class="btn bg-info text-white p-2 w-100 mt-3">Đăng ký</button>
                            </div>}
            </div>

        </div>
        @*<div class="container w-50 p-5 rounded text-center">
                <c:if test="${listDS != null}">
                    <h2>DANH SÁCH ĐÃ ĐĂNG KÝ</h2>

                    <h2 class="text-success">#${MaHV}</h2>
                    Số lượng: ${listDS.size()}
                    <table class="table table-striped table-dark rounded">
                        <tr class="bg-success text-white">
                            <th>Tên Khóa Học</th>
                            <th>Ngày Đăng Ký</th>

                        </tr>

                        <c:forEach items="${listDS}" var="l">
                            <tr>

                                <td>${l.getTenKH()}</td>
                                <td>${l.getNgayDK()}</td>
                            </tr>
                        </c:forEach>

                    </table>
                </c:if>

            </div>*@
    </div>

    <script type="text/javascript" src="~/Scripts/javascript.js"></script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
</body>

</html>
