@using FLICHCMUNRE.Models;
@{ ViewBag.Title = "Đăng Ký Học";
    Layout = null; }
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/styles/index.css">
</head>

<body>
    <div class="pb-3" style="background-image: url('../imgs/header-bg.png'); background-size:contain">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center pt-4">
                <div class="logo">
                    <img src="../imgs/logohcmunre.png" alt="" class="" style="height:100px">
                </div>
                <div class="text-white " style="display:flex;justify-content:space-between;align-items:center">

                    <a style="width: 150px; font-weight: bold;" href="index.jsp">@Html.ActionLink("Trang Chủ", "Index", "Home", new { @class = "text-white w-25" })</a>
                    <a class="text-white " style="width: 150px; font-weight: bold;" href="LoadFormInfo">@Html.ActionLink("Đăng Ký Học", "DangKyHoc", "Home", new { @class = "text-white w-25" })</a>
                    <a class="text-white " style="width: 150px; font-weight: bold;" href="LoadFormInfoDangKyThi">
                        @Html.ActionLink("Đăng Ký Thi", "DangKyThi", "Home", new { @class = "text-white w-25" })

                    </a>
                    
                    <a class="text-white " style="width: 150px; font-weight: bold;" href="huongdansudung.jsp">
                        @Html.ActionLink("Hướng Dẫn", "HuongDan", "Home", new { @class = "text-white w-25" })
                    </a>
                    <a class="text-white " style="width: 150px; font-weight: bold;" href="dangnhap.jsp">@Html.ActionLink("Đăng Nhập", "DangNhap", "Home", new { @class = "text-white w-25" })</a>
                </div>
            </div>
            <div class="text-white text-center mt-3">
                <h6 class="text-info bg-white p-2 mb-3">
                    Số tài khoản: 0261003491765, Chi nhánh Vietcombank Thủ Thiêm, Trung
                    tâm
                    Ngoại ngữ - Tin học Đại học Tài nguyên và Môi trường TPHCM<br>
                    NOTE: Vui lòng truy cập mục <span class="text-danger">"HƯỚNG DẪN"</span> để nắm cú pháp đóng lệ phí đăng ký khóa học
                </h6>

                @*<form action="searchHvInfo" method="processRequest">
                        <input type="number" required="required" name="HVInfo"
                               class="position-relative p-3 rounded w-50 border-primary pl-5 border-0 bg-light "
                               placeholder="Tra cứu thông tin đăng ký">
                        <button class="btn text-white p-3"
                                style="background: linear-gradient(90deg, #39cfca 0%, #3279bb 100%); border: 2px solid #fff;">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>*@
            </div>
        </div>

        <div class="container bg-white mt-3 card  mb-3">

            <div class="p-2 ">
                @using (Html.BeginForm("DangKyHoc", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
    @Html.AntiForgeryToken()

                    <div class="mt-4">
                        <a href="" class="text-decoration-none p-2 text-dark text-center">
                            <h2>
                                <i class="fas fa-university"></i>
                                SINH VIÊN ĐANG HỌC TẠI HCMUNRE
                            </h2>
                        </a>
                        <div class=" p-5 border card mt-2">
                            <h5 class="text-success">@TempData["Success1"]</h5>

                            <h3>
                                Đăng ký học theo hình thức
                                <select name="Maht" id="" style="cursor: pointer; outline: none" class="border-0 text-info  ">


                                    @foreach (var l in @ViewData["AllHT"] as List<AllHinhThucResult>)
                                    {
                        <option value="@l.MAHT">@l.TENHT</option>}
                                </select>

                            </h3>

                            <div class="">
                                <p class="text-danger">* là các tiêu chí bắt buộc không được bỏ trống!</p>
                                <span>Nhập MSSV</span><span class="text-danger"> *</span>
                                <a href="#" id="" class="tutorial">
                                    <span class="text-primary">Hướng dẫn cách nhập</span>
                                    <div id="tutorial" class="tutorialPopup rounded">
                                        <div class="contentTutorial w-100 m-auto bg-secondary p-5">
                                            <div class="contentTutorial__head d-flex justify-content-between">
                                                <h4 class="text-white m-auto ">Hướng dẫn nhập Mã</h4>

                                            </div>
                                            <div class="contentTutorial__body">
                                                <div class="contentTutorial__body__item bg-light p-2 m-3 rounded">
                                                    <div class="text-primary">Nhập MSSV đối với:</div>
                                                    <p class="">Sinh viên Đại học tại HCMUNRE</p>
                                                </div>
                                                <div class="contentTutorial__body__item bg-light p-2 m-3 rounded">
                                                    <div class="text-primary">Nhập Mã học viên đối với:</div>
                                                    <p class="">Học viên Cao học tại HCMUNRE</p>
                                                </div>
                                                <div class="contentTutorial__body__item bg-light p-2 m-3 rounded">
                                                    <div class="text-primary">Nhập CMND, CCCD đối với:</div>
                                                    <p class="">Người đăng ký hiên không học tại HCMUNRE</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                <input type="number" value="" class="w-100 p-2 rounded rounded border-light" name="Mahv" placeholder="Nhập MSSV, MSHV vào đây...">
                                <p class="text-danger">@TempData["CheckMSSV"]</p>
                                <div class="row mt-3">
                                    <div class="col-lg-6">
                                        <span>Chọn buổi học</span> <span class="text-danger"> *</span>
                                        <select name="Maca" id="" style="cursor: pointer; outline: none" class="w-100  border-0 bg-light p-3 rounded">


                                            @foreach (var l in @ViewData["AllCa"] as List<AllCaResult>)
                                            {
                            <option value="@l.MACA">@l.TENCA</option>}
                                        </select>

                                    </div>
                                    <div class="col-lg-6">
                                        <span>Khóa học</span><span class="text-danger"> *</span>
                                        <select name="Makh" id="" class="w-100 p-3" style=" outline: none">


                                            @foreach (var l in @ViewData["AllKH"] as List<AllKhoaHocGocResult>)
                                            {
                            <option value="@l.MAKH">@l.TENKH</option>}
                                        </select>
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <span>Ảnh chụp hóa đơn, chuyển khoản</span> <span class="text-danger">
                                        (&lt;
                                        3MB)*
                                    </span>
                                    <input type="file" required="required" title="Chọn ảnh hóa đơn thanh toán khóa học" name="Anhck" class="w-100 p-2 rounded border-light">

                                </div>
                                <button type="submit" class="btn bg-info text-white p-2 w-100 mt-3">Đăng ký</button>
                            </div>


                        </div>
                    </div>}
            </div>
        </div>
        <div class=" container bg-white mt-4 card  mb-3">
            <div>
                @using (Html.BeginForm("DangKyHocNotHCMUNE", "HOME", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
    @Html.AntiForgeryToken()

                <div class=" mt-4">
                    <h5 class="text-success">@TempData["Success1"]</h5>

                    <a href="" class="text-decoration-none p-2 text-dark text-center">
                        <h2>
                            <i class="fas fa-university"></i>
                            HỌC VIÊN CHƯA CÓ DỮ LIỆU TRÊN HỆ THỐNG
                        </h2>
                    </a>
                    <div class=" p-5 card mt-2 position-relative">

                        <h3>
                            Đăng ký học theo hình thức
                            <select name="MaHT" id="" style="cursor: pointer; outline: none" class="border-0 text-info">

                                @foreach (var l in @ViewData["AllHT"] as List<AllHinhThucResult>)
                                {
                <option value="@l.MAHT">@l.TENHT</option>}

                            </select>

                        </h3>

                        <div class="p-2">
                            <p class="text-danger">* là các tiêu chí bắt buộc không được bỏ trống!</p>
                            <div class="row">
                                <div class="col-lg-4">
                                    <span>Mã định danh</span>
                                    <a href="#" id="" class="tutorial">
                                        <span class="text-primary">Hướng dẫn cách nhập</span>
                                        <div id="tutorial" class="tutorialPopup rounded">
                                            <div class="contentTutorial w-100 m-auto bg-secondary p-5">
                                                <div class="contentTutorial__head d-flex justify-content-between">
                                                    <h4 class="text-white m-auto ">Hướng dẫn nhập Mã</h4>

                                                </div>
                                                <div class="contentTutorial__body">
                                                    <div class="contentTutorial__body__item bg-light p-2 m-3 rounded">
                                                        <div class="text-primary">Nhập MSSV đối với:</div>
                                                        <p class="">Sinh viên Đại học tại HCMUNRE</p>
                                                    </div>
                                                    <div class="contentTutorial__body__item bg-light p-2 m-3 rounded">
                                                        <div class="text-primary">Nhập Mã học viên đối với:</div>
                                                        <p class="">Học viên Cao học tại HCMUNRE</p>
                                                    </div>
                                                    <div class="contentTutorial__body__item bg-light p-2 m-3 rounded">
                                                        <div class="text-primary">Nhập CMND, CCCD đối với:</div>
                                                        <p class="">Người đăng ký hiên không học tại HCMUNRE</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>

                                    <span class="text-danger"> *</span>
                                    <input type="number" name="CCCD" value="" class="w-100 p-2 rounded border-light"
                                           placeholder="Nhập CCCD">
                                    <p class="text-danger">@TempData["CheckCCCD"]</p>
                                </div>
                                <div class="col-lg-4">
                                    <span>Họ tên</span><span class="text-danger"> *</span>
                                    <input type="text" name="HoTen" value="" class="w-100 p-2 rounded border-light "
                                           placeholder="Nhập đầy đủ họ tên">
                                    <p class="text-danger">@TempData["CheckHoTen"]</p>
                                </div>
                                <div class="col-lg-4">
                                    <span>Ngày sinh</span> <span class="text-danger"> *</span>

                                    <input type="date" max="2008-01-01" value="" required name="NgaySinh" class="w-100 p-2 rounded border-light">

                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-lg-4">
                                    <span>Nơi sinh</span> <span class="text-danger"> *</span>
                                    <input type="text" name="NoiSinh" value="" class="w-100 p-2 rounded border-light"
                                           placeholder="Nhập nơi sinh">
                                    <p class="text-danger">@TempData["CheckNoiSinh"]</p>
                                </div>
                                <div class="col-lg-4">
                                    <span>Email</span><span class="text-danger"> *</span>
                                    <input type="email" name="Email" value="" class="w-100 p-2 rounded border-light"
                                           placeholder="Email cá nhân thường dùng nhất">

                                </div>
                                <div class="col-lg-4">
                                    <span>Điện thoại</span> <span class="text-danger"> *</span>
                                    <input type="number" name="SDT" value="" class="w-100 p-2 rounded border-light"
                                           placeholder="Số điện thoại thường dùng nhất">
                                    <p class="text-danger">@TempData["CheckSDT"]</p>
                                </div>
                            </div>
                            <div class="row mt-3 align-item-center">
                                <div class="col-lg-4">
                                    <span>Chọn buổi học</span> <span class="text-danger"> *</span>
                                    <select name="MaCa" id="" value="" style="cursor: pointer; outline: none" class="w-100 border-0 bg-light p-2">


                                        @foreach (var l in @ViewData["AllCa"] as List<AllCaResult>)
                                        {
                        <option value="@l.MACA">@l.TENCA</option>}
                                    </select>

                                </div>
                                <div class="col-lg-4">
                                    <span>Khóa học</span><span class="text-danger"> *</span>
                                    <select name="MaKH" id="" value="" style=" outline: none" class="w-100  p-2 ">


                                        @foreach (var l in @ViewData["AllKH"] as List<AllKhoaHocGocResult>)
                                        {
                        <option value="@l.MAKH">@l.TENKH</option>}
                                    </select>
                                </div>
                                <div class="col-lg-4">
                                    <span>Ảnh chụp hóa đơn, chuyển khoản</span> <span class="text-danger">
                                        (&lt;
                                        3MB)*
                                    </span>
                                    <input type="file" value="" title="Chọn ảnh hóa đơn thanh toán khóa học" required="required" name="AnhCK" class="w-100 p-2 rounded border-light">

                                </div>
                            </div>
                            <button class="btn bg-info text-white p-2 w-100 mt-3">Đăng ký</button>
                        </div>

                    </div>
                </div>}
            </div>

        </div>

    </div>


    <script type="text/javascript" src="~/Scripts/javascript.js"></script>

    <script type="text/javascript" src="scripts/javascript.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
</body>

</html>
