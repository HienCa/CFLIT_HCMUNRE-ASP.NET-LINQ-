@model IEnumerable<FLICHCMUNRE.Models.AllTaiKhoanResult>
@using FLICHCMUNRE.Models;
@{
    ViewBag.Title = "QLAdmin";
}



<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/index.css">
    <title>QUẢN LÝ</title>
</head>

<body>
    <div class="" style="background-image: url('../imgs/header-bg.png'); height: 100vh; background-size:contain">
        <div class="d-flex justify-content-between ">
            <div class="w-25 bg-info d-flex pt-5 " style="height: 100vh; ">
                <center>

                    <div class="mt-3">
                        @Html.ActionLink("QUẢN LÝ TÀI KHOẢN", "QLAdmin", "TaiKhoan", new { @class = "p-3 bg-info  mt-3 w-100 rounded  text-white" })
                    </div>


                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ KHÓA HỌC", "Index", "KhoaHoc", "KhoaHoc", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>


                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ LỚP HỌC", "Index", "LopHoc", "LopHoc", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })
                    </div>


                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ HỌC VIÊN", "Index", "HocVien", "HocVien", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>

                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ GIẢNG VIÊN", "Index", "GiangVien", "GiangVien", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>

                    <div class="mt-5">
                        @Html.ActionLink("QUẢN LÝ THỂ LOẠI", "Index", "TheLoai", "TheLoai", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>

                    <div class="mt-5">
                        @Html.ActionLink("HOME", "Index", "Home", "Home", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>
                    <div class="mt-5">
                        @Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "Home", "Home", new { @class = "p-3 bg-info  mt-3 w-100 rounded text-white" })

                    </div>
                </center>
            </div>

            <div class="container mt-4 w-50">
                <h2 class=" text-center text-white">THÊM TÀI KHOẢN</h2>
                <div class=" bg-white card text-center ">
                    @using (Html.BeginForm("Create", "TaiKhoan", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="w-100 mt-5">

                            <p class="text-left" style="margin-left: 60px">
                                UserName <span class="text-danger">*</span>
                            </p>


                            <input name="TK" placeholder="Nhập UserName" class="w-75 p-2 rounded border-light" />


                        </div>
                        <div class="w-100 mt-4">

                            <p class="text-left" style="margin-left: 60px">
                                Password <span class="text-danger">*</span>
                            </p>


                            <input class="w-75    p-2 rounded border-light" placeholder="Nhập Password" type="text"
                                   name="MK" />


                        </div>
                        <div class="w-100 mt-4">

                            <p class="text-left" style="margin-left: 60px">
                                Vai Trò <span class="text-danger">*</span>
                            </p>


                            <input class=" w-75  p-2 rounded border-light" placeholder="Nhập Vai Trò" type="text"
                                   name="vaitro" />


                        </div>


                        <button type="submit" class="btn bg-info w-50 mt-4 text-white mb-5">Thêm</button>
                    }

                </div>

            </div>
            <div class="container mt-4 w-100 w-100">
                <div class=" ">
                    <h2 class="text-center text-white">DANH SÁCH CÁC TÀI KHOẢN</h2>
                    <div style="height: 1000px;max-height: 70vh; overflow-y: scroll" class="bg-white card">

                        <table style="" class="table-striped table ">
                            <tr>
                                <th>
                                    @Html.DisplayName("Tài Khoản")
                                </th>
                                <th>
                                    @Html.DisplayName("Mật Khẩu")
                                </th>
                                <th>
                                    @Html.DisplayName("Vai Trò")
                                </th>
                                <th></th>
                            </tr>
                            @if (ViewData["search"] as List<SearchTaiKhoanResult> != null)
                            {
                                foreach (var item in ViewData["search"] as List<SearchTaiKhoanResult>)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TK)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MK)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VAITRO)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TK)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MK)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VAITRO)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                        </td>
                                    </tr>
                                }
                            }


                        </table>
                    </div>

                    <div class=" bg-white card text-center mt-3">

                        <div>

                            @using (Html.BeginForm("Search", "TaiKhoan", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="d-flex justify-content-center align-items-center p-2">
                                    <input type="text" name="Search" placeholder="Nhập cần tìm..."
                                           class="w-75 p-2 rounded border-light mr-2">

                                    <input type="submit" value="Tìm Kiếm" class=" w-25 btn bg-info p-2 text-white" />

                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
    <script type="text/javascript" src="scripts/javascript.js"></script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
</body>

</html>




