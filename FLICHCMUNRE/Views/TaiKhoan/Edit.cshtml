@model FLICHCMUNRE.Models.OneTaiKhoanResult

<div class="container" style="overflow-y:scroll; height:80vh; border-bottom:1px solid #ffffff">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-white">CẬP NHẬT</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.Label("UserName", htmlAttributes: new { @class = "control-label col-md-2 text-white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mật Khẩu", htmlAttributes: new { @class = "control-label col-md-2 text-white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Vai Trò", htmlAttributes: new { @class = "control-label col-md-2 text-white" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VAITRO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VAITRO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Save" class="btn bg-primary text-white" /> 
            </div>
            
        </div>
       
    </div>




    }


</div>

